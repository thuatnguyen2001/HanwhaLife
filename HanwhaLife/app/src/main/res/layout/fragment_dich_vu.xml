<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECEBEB"
    tools:context=".DichVuFragment">

    <ImageView
        android:id="@+id/imageApp"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:scaleType="fitXY"
        android:contentDescription="TODO"
        android:src="@drawable/giadinh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="horizontal"
            android:paddingHorizontal="0dp">

            <LinearLayout
                android:id="@+id/itemGQQL"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bag_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:text="Giải quyết quyền lợi bảo hiểm" />

            </LinearLayout>
            <EditText
                android:layout_width="1dp"
                android:background="#A89F9F"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/itemThanhToan"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pay_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:text="Thanh toán" />

            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A89F9F"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/itemDieuChinhTTCN"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/account_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:text="Điều chỉnh thông tin cá nhân" />


            </LinearLayout>
            <EditText
                android:layout_width="1dp"
                android:background="#A89F9F"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/itemDieuChinhHD"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/list_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center"
                    android:text="Điều chỉnh hợp đồng" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A89F9F"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/itemChamSoc"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cs_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center"
                    android:text="Chăm sóc khách hàng" />


            </LinearLayout>
            <EditText
                android:layout_width="1dp"
                android:background="#A89F9F"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/itemThuVien"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/library_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center"
                    android:text="Thư viện thư điện tử" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>